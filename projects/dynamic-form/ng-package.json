{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/dynamic-form",
  "lib": {
    "entryFile": "src/public-api.ts"
  },
  "assets": [
    {
      "glob": "**/*",
      "input": "src/lib/flags",
      "output": "assets/flags"
    }
  ],
  "allowedNonPeerDependencies": [
    "@angular-slider/ngx-slider",
    "@ng-bootstrap/ng-bootstrap",
    "ng-recaptcha-2",
    "ng-otp-input",
    "google-libphonenumber"
  ]
}
